---
import Layout from "../layouts/Layout.astro";
import Navigation from "../components/Navigation.astro";

const musicProjects = [
    {
        title: "hôm ấy anh kiểu... (2024)",
        date: "2024",
        image: "https://cdn.myportfolio.com/9eba5643-bfa0-410a-bf8e-e98703657db5/581fb7f1-7ab5-44d9-b782-36cce9cd5e2f_car_3x4.jpg?h=5eaf5127b0d9c1af7c83db6222d7bf6d",
        href: "/hom-ay-anh-kieu-2024"
    },
    {
        title: "những ngày đầu (2023)",
        date: "2024",
        image: "https://cdn.myportfolio.com/9eba5643-bfa0-410a-bf8e-e98703657db5/01454ddb-fa00-42fb-ab2d-ad9f9a51fdd7_car_3x4.jpg?h=37e11e8f7a78dc21ecaca93b0fa72351",
        href: "/nhung-ngay-dau-2023"
    }
];
---

<Layout title="Music - Film Portfolio">
    <Navigation />
    <main class="main-content">
        <div class="container">
            <div class="projects-grid">
                {musicProjects.map((project) => (
                    <a href={project.href} class="project-cover">
                        <div class="cover-content-container">
                            <div class="cover-image-wrap">
                                <div class="cover-image">
                                    <img 
                                        class="cover__img" 
                                        src={project.image} 
                                        alt={project.title}
                                        loading="lazy"
                                    />
                                    <div class="project-overlay">
                                        <div class="overlay-content">
                                            <div class="overlay-title">{project.title}</div>
                                            <div class="overlay-date">{project.date}</div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </a>
                ))}
            </div>
        </div>
    </main>
</Layout>

<style>
    .main-content {
        min-height: 100vh;
        padding: 4rem 0 2rem 0;
    }

    .container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 2rem;
    }

    .projects-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
        gap: 2rem;
        align-items: start;
    }

    .project-cover {
        display: block;
        text-decoration: none;
        color: inherit;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        border-radius: 12px;
        overflow: hidden;
        background: white;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
        width: 100%;
        max-width: 100%;
    }

    .project-cover:hover {
        transform: translateY(-4px);
        box-shadow: 0 8px 40px rgba(0, 0, 0, 0.15);
    }

    .cover-content-container {
        position: relative;
        width: 100%;
    }

    .cover-image-wrap {
        position: relative;
        width: 100%;
        aspect-ratio: 3/4;
        overflow: hidden;
        flex-shrink: 0;
    }

    .cover-image {
        position: relative;
        width: 100%;
        height: 100%;
    }

    .cover__img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.3s ease;
    }

    .project-cover:hover .cover__img {
        transform: scale(1.05);
        filter: blur(2px);
    }

    .project-overlay {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: rgba(0, 0, 0, 0.7);
        display: flex;
        align-items: center;
        justify-content: center;
        opacity: 0;
        transition: opacity 0.3s ease;
        backdrop-filter: blur(4px);
    }

    .project-cover:hover .project-overlay {
        opacity: 1;
    }

    .overlay-content {
        text-align: center;
        color: white;
        padding: 1rem;
        max-width: 90%;
    }

    .overlay-title {
        font-family: "DM Mono", monospace;
        font-size: 1.1rem;
        font-weight: 600;
        margin-bottom: 0.5rem;
        line-height: 1.3;
    }

    .overlay-date {
        font-family: "DM Mono", monospace;
        font-size: 0.9rem;
        color: #92B4B6;
        font-weight: 400;
    }


    @media (max-width: 768px) {
        .container {
            padding: 0 1rem;
        }

        .projects-grid {
            grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
            gap: 1.5rem;
        }


        .overlay-title {
            font-size: 1rem;
        }

        .overlay-date {
            font-size: 0.85rem;
        }
    }

    @media (max-width: 540px) {
        .projects-grid {
            grid-template-columns: 1fr;
        }
    }
</style>