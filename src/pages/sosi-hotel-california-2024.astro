---
import Layout from "../layouts/Layout.astro";
import Navigation from "../components/Navigation.astro";
---

<Layout title="Sosi - Hotel California (2024) - An Nguyen's Portfolio">
    <Navigation />
    <main class="main-content">
        <div class="container">
            <div class="project-header">
                <h1 class="project-title">Sosi - Hotel California (2024)</h1>
                <div class="project-meta">
                    <div class="meta-item">
                        <span class="meta-label">Creator:</span>
                        <span class="meta-value">An Nguyen</span>
                    </div>
                    <div class="meta-item">
                        <span class="meta-label">Production Company:</span>
                        <span class="meta-value">XUÂNVỀ CREATIVE</span>
                    </div>
                    <div class="meta-item">
                        <span class="meta-label">Roles:</span>
                        <span class="meta-value">Directed, Shot, Edited, and Colored by An Nguyen</span>
                    </div>
                    <div class="meta-item">
                        <span class="meta-label">Year:</span>
                        <span class="meta-value">2024</span>
                    </div>
                </div>
            </div>

            <!-- Video Embed -->
            <div class="video-section">
                <div class="video-wrapper">
                    <iframe 
                        src="https://www.youtube.com/embed/Bqo2uCdIq3I" 
                        title="Sosi - Hotel California (2024) - An Nguyen"
                        allowfullscreen
                        loading="lazy"
                        class="video-embed"
                    ></iframe>
                </div>
                <p class="video-description">Watch the official music video above. Directed, shot, edited and colored by An Nguyen for XUÂNVỀ CREATIVE.</p>
            </div>

            <div class="project-gallery">
                <img 
                    src="https://cdn.myportfolio.com/9eba5643-bfa0-410a-bf8e-e98703657db5/df3831db-bb1b-4d19-a84e-82af4fee8675_rw_1200.jpg?h=e0ed6251913bd5c3798b7f1fc0a8de65" 
                    alt="Sosi - Hotel California - Frame 1"
                    loading="lazy"
                    class="gallery-image"
                />
                <img 
                    src="https://cdn.myportfolio.com/9eba5643-bfa0-410a-bf8e-e98703657db5/e57be144-c291-4218-b52e-d63c00aaadb6_rw_1200.jpg?h=417e1d95047d762a3fc6dd91550fde42" 
                    alt="Sosi - Hotel California - Frame 2"
                    loading="lazy"
                    class="gallery-image"
                />
                <img 
                    src="https://cdn.myportfolio.com/9eba5643-bfa0-410a-bf8e-e98703657db5/ebea0338-f0b0-41f6-b7fa-275063b1ee32_rw_1200.jpg?h=ce348a93f86b007456d232f0dbea48cb" 
                    alt="Sosi - Hotel California - Frame 3"
                    loading="lazy"
                    class="gallery-image"
                />
            </div>
        </div>
    </main>
</Layout>

<style>
    .main-content {
        min-height: 100vh;
        padding: 2rem 0;
    }

    .container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 2rem;
    }

    .project-header {
        margin-bottom: 3rem;
        text-align: center;
    }

    .project-title {
        font-family: "DM Mono", monospace;
        font-size: 2.5rem;
        font-weight: 600;
        color: #333;
        margin-bottom: 2rem;
        line-height: 1.2;
    }

    .project-meta {
        display: flex;
        flex-wrap: wrap;
        gap: 2rem;
        justify-content: center;
        font-family: "DM Mono", monospace;
    }

    .meta-item {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 0.25rem;
    }

    .meta-label {
        font-size: 0.85rem;
        color: #666;
        text-transform: uppercase;
        letter-spacing: 0.05em;
    }

    .meta-value {
        font-size: 0.95rem;
        color: #333;
        font-weight: 500;
    }

    .project-gallery {
        display: grid;
        gap: 2rem;
        grid-template-columns: 1fr;
        max-width: 900px;
        margin: 0 auto;
    }

    .gallery-image {
        width: 100%;
        height: auto;
        border-radius: 8px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    .gallery-image:hover {
        transform: translateY(-4px);
        box-shadow: 0 8px 30px rgba(0, 0, 0, 0.15);
    }

    .video-section {
        margin-bottom: 3rem;
        max-width: 900px;
        margin-left: auto;
        margin-right: auto;
    }

    .video-wrapper {
        position: relative;
        width: 100%;
        height: 0;
        padding-bottom: 56.25%; /* 16:9 aspect ratio */
        overflow: hidden;
        border-radius: 8px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
    }

    .video-embed {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        border: none;
    }

    .video-description {
        margin-top: 1rem;
        font-family: "DM Mono", monospace;
        font-size: 0.95rem;
        color: #666;
        text-align: center;
        line-height: 1.5;
    }

    @media (max-width: 768px) {
        .container {
            padding: 0 1rem;
        }

        .project-title {
            font-size: 2rem;
        }

        .project-meta {
            gap: 1rem;
        }

        .meta-item {
            flex-direction: row;
            gap: 0.5rem;
        }

        .project-gallery {
            gap: 1.5rem;
        }
    }

    @media (max-width: 540px) {
        .project-title {
            font-size: 1.75rem;
        }

        .project-meta {
            flex-direction: column;
            align-items: center;
            gap: 0.75rem;
        }
    }
</style>