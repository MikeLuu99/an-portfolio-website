---
import Layout from "../layouts/Layout.astro";
import Navigation from "../components/Navigation.astro";
---

<Layout title="Benner - Phim xem tua (Visualizer) - An Nguyen's Portfolio">
    <Navigation />
    <main class="main-content">
        <div class="container">
            <div class="project-header">
                <h1 class="project-title">
                    Benner - Phim xem tua (Visualizer)
                </h1>
                <div class="project-meta">
                    <div class="meta-item">
                        <span class="meta-label">Creator:</span>
                        <span class="meta-value">An Nguyen</span>
                    </div>
                    <div class="meta-item">
                        <span class="meta-label">Roles:</span>
                        <span class="meta-value"
                            >directed, dp, edited, camOP, colored by Anzz</span
                        >
                    </div>
                    <div class="meta-item">
                        <span class="meta-label">Year:</span>
                        <span class="meta-value">2024</span>
                    </div>
                </div>
            </div>

            <!-- Video Embed -->

            <div class="project-gallery">
                <img
                    src="https://cdn.myportfolio.com/9eba5643-bfa0-410a-bf8e-e98703657db5/00338ba3-fdbe-4bff-97ea-9c5b5742373d_rw_1200.jpg?h=bd8ff533a4509e54523be7d96ceb2d67"
                    alt="Benner - Phim xem tua - Frame 1"
                    loading="lazy"
                    class="gallery-image"
                />
                <img
                    src="https://cdn.myportfolio.com/9eba5643-bfa0-410a-bf8e-e98703657db5/258e5a80-0dfa-4240-9538-03eb895e021d_rw_1200.jpg?h=d82d21562f23db8e5d73e93327cc8acf"
                    alt="Benner - Phim xem tua - Frame 2"
                    loading="lazy"
                    class="gallery-image"
                />
                <img
                    src="https://cdn.myportfolio.com/9eba5643-bfa0-410a-bf8e-e98703657db5/cfbc8710-49f0-466f-9fdc-40f0c04197a8_rw_1200.jpg?h=562c77cf0cad570f678c2c3a96dc77f9"
                    alt="Benner - Phim xem tua - Frame 3"
                    loading="lazy"
                    class="gallery-image"
                />
                <img
                    src="https://cdn.myportfolio.com/9eba5643-bfa0-410a-bf8e-e98703657db5/d0fbd821-f14b-478f-932b-97cf5a17d74b_rw_1200.jpg?h=73aeee0ab483e43bb5640542a70771b7"
                    alt="Benner - Phim xem tua - Frame 4"
                    loading="lazy"
                    class="gallery-image"
                />
                <img
                    src="https://cdn.myportfolio.com/9eba5643-bfa0-410a-bf8e-e98703657db5/f15de18d-9641-4610-ab86-4873a59842a6_rw_1200.jpg?h=4b15f586f1c8cb9e9a32f3d51670f091"
                    alt="Benner - Phim xem tua - Frame 5"
                    loading="lazy"
                    class="gallery-image"
                />
                <img
                    src="https://cdn.myportfolio.com/9eba5643-bfa0-410a-bf8e-e98703657db5/d12d356c-2d0d-45d7-b17f-82357bd1dc3f_rw_1200.jpg?h=9d0b12414f4cbb5574d8ae070032482e"
                    alt="Benner - Phim xem tua - Frame 6"
                    loading="lazy"
                    class="gallery-image"
                />
            </div>
        </div>
    </main>
</Layout>

<style>
    .main-content {
        min-height: 100vh;
        padding: 2rem 0;
    }

    .container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 2rem;
    }

    .project-header {
        margin-bottom: 3rem;
        text-align: center;
    }

    .project-title {
        font-family: "DM Mono", monospace;
        font-size: 2.5rem;
        font-weight: 600;
        color: #333;
        margin-bottom: 2rem;
        line-height: 1.2;
    }

    .project-meta {
        display: flex;
        flex-wrap: wrap;
        gap: 2rem;
        justify-content: center;
        font-family: "DM Mono", monospace;
    }

    .meta-item {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 0.25rem;
    }

    .meta-label {
        font-size: 0.85rem;
        color: #666;
        text-transform: uppercase;
        letter-spacing: 0.05em;
    }

    .meta-value {
        font-size: 0.95rem;
        color: #333;
        font-weight: 500;
    }

    .project-gallery {
        display: grid;
        gap: 2rem;
        grid-template-columns: 1fr;
        max-width: 900px;
        margin: 0 auto;
    }

    .gallery-image {
        width: 100%;
        height: auto;
        border-radius: 8px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
        transition:
            transform 0.3s ease,
            box-shadow 0.3s ease;
    }

    .gallery-image:hover {
        transform: translateY(-4px);
        box-shadow: 0 8px 30px rgba(0, 0, 0, 0.15);
    }

    .video-section {
        margin-bottom: 3rem;
        max-width: 900px;
        margin-left: auto;
        margin-right: auto;
    }

    .video-wrapper {
        position: relative;
        width: 100%;
        height: 0;
        padding-bottom: 56.25%; /* 16:9 aspect ratio */
        overflow: hidden;
        border-radius: 8px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
    }

    .video-embed {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        border: none;
    }

    .video-description {
        margin-top: 1rem;
        font-family: "DM Mono", monospace;
        font-size: 0.95rem;
        color: #666;
        text-align: center;
        line-height: 1.5;
    }

    @media (max-width: 768px) {
        .container {
            padding: 0 1rem;
        }

        .project-title {
            font-size: 2rem;
        }

        .project-meta {
            gap: 1rem;
        }

        .meta-item {
            flex-direction: row;
            gap: 0.5rem;
        }

        .project-gallery {
            gap: 1.5rem;
        }
    }

    @media (max-width: 540px) {
        .project-title {
            font-size: 1.75rem;
        }

        .project-meta {
            flex-direction: column;
            align-items: center;
            gap: 0.75rem;
        }
    }
</style>
