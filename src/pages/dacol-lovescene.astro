---
import Layout from "../layouts/Layout.astro";
import Navigation from "../components/Navigation.astro";
---

<Layout title="Dacol - LOVESCENE (2024) - An Nguyen's Portfolio">
    <Navigation />
    <main class="main-content">
        <div class="container">
            <div class="project-header">
                <h1 class="project-title">Dacol - LOVESCENE (2024)</h1>
                <div class="project-meta">
                    <div class="meta-item">
                        <span class="meta-label">Project by:</span>
                        <span class="meta-value">XUÂNVỀ CREATIVE</span>
                    </div>
                    <div class="meta-item">
                        <span class="meta-label">Director:</span>
                        <span class="meta-value">lêDUY</span>
                    </div>
                    <div class="meta-item">
                        <span class="meta-label">Shot, edited, and colored by:</span>
                        <span class="meta-value">An Nguyen</span>
                    </div>
                    <div class="meta-item">
                        <span class="meta-label">Year:</span>
                        <span class="meta-value">2024</span>
                    </div>
                </div>
            </div>

            <!-- Video Embed -->
            <div class="video-section">
                <div class="video-wrapper">
                    <iframe 
                        src="https://www.youtube.com/embed/Gvw_GM3moQ0" 
                        title="Dacol - LOVESCENE (2024) - An Nguyen"
                        allowfullscreen
                        loading="lazy"
                        class="video-embed"
                    ></iframe>
                </div>
                <p class="video-description">Watch the official music video above. Directed by lêDUY, shot, edited and colored by An Nguyen for XUÂNVỀ CREATIVE.</p>
            </div>

            <div class="project-gallery">
                <img 
                    src="https://cdn.myportfolio.com/9eba5643-bfa0-410a-bf8e-e98703657db5/771ac410-a677-4b8e-9f0a-af641ad56470_rw_1200.png?h=22f044041e03157342a9594b2846b7e4" 
                    alt="Dacol - LOVESCENE - Frame 1"
                    loading="lazy"
                    class="gallery-image"
                />
                <img 
                    src="https://cdn.myportfolio.com/9eba5643-bfa0-410a-bf8e-e98703657db5/a060ddf4-0c49-4881-8f5e-3e347bc18b26_rw_1200.png?h=e2cff0cc332f7fea5184e51868c93b10" 
                    alt="Dacol - LOVESCENE - Frame 2"
                    loading="lazy"
                    class="gallery-image"
                />
                <img 
                    src="https://cdn.myportfolio.com/9eba5643-bfa0-410a-bf8e-e98703657db5/b190388d-02f5-419c-810b-99a5cd81bde1_rw_1200.png?h=26546bcaab6e142aa43e2b7939271aa7" 
                    alt="Dacol - LOVESCENE - Frame 3"
                    loading="lazy"
                    class="gallery-image"
                />
                <img 
                    src="https://cdn.myportfolio.com/9eba5643-bfa0-410a-bf8e-e98703657db5/4bd203fc-cb6b-442a-a6c7-f3b2c4b7fec8_rw_1200.png?h=81eb97d762d475b83eb6df54042adead" 
                    alt="Dacol - LOVESCENE - Frame 4"
                    loading="lazy"
                    class="gallery-image"
                />
                <img 
                    src="https://cdn.myportfolio.com/9eba5643-bfa0-410a-bf8e-e98703657db5/97e767e3-9f4c-4974-a3e5-f33d43bb9ad1_rw_1200.png?h=50e52524b7d130fae7ca1db39d33f98f" 
                    alt="Dacol - LOVESCENE - Frame 5"
                    loading="lazy"
                    class="gallery-image"
                />
            </div>
        </div>
    </main>
</Layout>

<style>
    .main-content {
        min-height: 100vh;
        padding: 2rem 0;
    }

    .container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 2rem;
    }

    .project-header {
        margin-bottom: 3rem;
        text-align: center;
    }

    .project-title {
        font-family: "DM Mono", monospace;
        font-size: 2.5rem;
        font-weight: 600;
        color: #333;
        margin-bottom: 2rem;
        line-height: 1.2;
    }

    .project-meta {
        display: flex;
        flex-wrap: wrap;
        gap: 2rem;
        justify-content: center;
        font-family: "DM Mono", monospace;
    }

    .meta-item {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 0.25rem;
    }

    .meta-label {
        font-size: 0.85rem;
        color: #666;
        text-transform: uppercase;
        letter-spacing: 0.05em;
    }

    .meta-value {
        font-size: 0.95rem;
        color: #333;
        font-weight: 500;
    }

    .project-gallery {
        display: grid;
        gap: 2rem;
        grid-template-columns: 1fr;
        max-width: 900px;
        margin: 0 auto;
    }

    .gallery-image {
        width: 100%;
        height: auto;
        border-radius: 8px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    .gallery-image:hover {
        transform: translateY(-4px);
        box-shadow: 0 8px 30px rgba(0, 0, 0, 0.15);
    }

    .video-section {
        margin-bottom: 3rem;
        max-width: 900px;
        margin-left: auto;
        margin-right: auto;
    }

    .video-wrapper {
        position: relative;
        width: 100%;
        height: 0;
        padding-bottom: 56.25%; /* 16:9 aspect ratio */
        overflow: hidden;
        border-radius: 8px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
    }

    .video-embed {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        border: none;
    }

    .video-description {
        margin-top: 1rem;
        font-family: "DM Mono", monospace;
        font-size: 0.95rem;
        color: #666;
        text-align: center;
        line-height: 1.5;
    }

    @media (max-width: 768px) {
        .container {
            padding: 0 1rem;
        }

        .project-title {
            font-size: 2rem;
        }

        .project-meta {
            gap: 1rem;
        }

        .meta-item {
            flex-direction: row;
            gap: 0.5rem;
        }

        .project-gallery {
            gap: 1.5rem;
        }
    }

    @media (max-width: 540px) {
        .project-title {
            font-size: 1.75rem;
        }

        .project-meta {
            flex-direction: column;
            align-items: center;
            gap: 0.75rem;
        }
    }
</style>