---
import Layout from "../layouts/Layout.astro";
import Navigation from "../components/Navigation.astro";
---

<Layout title="QUÁI! lêDUY - VNDNA (ft. AKIRA) - An Nguyen's Portfolio">
    <Navigation />
    <main class="main-content">
        <div class="container">
            <div class="project-header">
                <h1 class="project-title">QUÁI! lêDUY - VNDNA (ft. AKIRA)</h1>
                <div class="project-meta">
                    <div class="meta-item">
                        <span class="meta-label">Creator:</span>
                        <span class="meta-value">An Nguyen</span>
                    </div>
                    <div class="meta-item">
                        <span class="meta-label">Roles:</span>
                        <span class="meta-value">Edited and Colored by Anzz</span>
                    </div>
                    <div class="meta-item">
                        <span class="meta-label">Year:</span>
                        <span class="meta-value">2024</span>
                    </div>
                </div>
            </div>

            <!-- Video Embed -->
            <div class="video-section">
                <div class="video-wrapper">
                    <iframe 
                        src="https://www.youtube.com/embed/ogVAxPNhKHE" 
                        title="QUÁI! lêDUY - VNDNA (ft. AKIRA) - An Nguyen"
                        allowfullscreen
                        loading="lazy"
                        class="video-embed"
                    ></iframe>
                </div>
                <p class="video-description">Watch the official music video above. Edited and colored by An Nguyen.</p>
            </div>

            <div class="project-gallery">
                <img 
                    src="https://cdn.myportfolio.com/9eba5643-bfa0-410a-bf8e-e98703657db5/f32aebb4-618c-40a0-91e6-947b48eed1f2_rw_1200.jpg?h=eccca2aa5e99fe5e8a6ce77b5eab2e1f" 
                    alt="QUÁI! lêDUY - VNDNA - Frame 1"
                    loading="lazy"
                    class="gallery-image"
                />
                <img 
                    src="https://cdn.myportfolio.com/9eba5643-bfa0-410a-bf8e-e98703657db5/38080da5-608c-4e8b-a8ec-2dcd70285c57_rw_1200.jpg?h=bbc8c238d2b2efff2d44c003805b2fdc" 
                    alt="QUÁI! lêDUY - VNDNA - Frame 2"
                    loading="lazy"
                    class="gallery-image"
                />
                <img 
                    src="https://cdn.myportfolio.com/9eba5643-bfa0-410a-bf8e-e98703657db5/2429cfd5-071a-4236-a69e-ffc27d9a8df7_rw_1200.jpg?h=be611a4ba9f865294d00e9ba80ec3b36" 
                    alt="QUÁI! lêDUY - VNDNA - Frame 3"
                    loading="lazy"
                    class="gallery-image"
                />
                <img 
                    src="https://cdn.myportfolio.com/9eba5643-bfa0-410a-bf8e-e98703657db5/6d0f3e78-eae3-42e8-9836-d51c5b06b0fc_rw_1200.jpg?h=d921fd99a754a1268453f0c12cb8fec3" 
                    alt="QUÁI! lêDUY - VNDNA - Frame 4"
                    loading="lazy"
                    class="gallery-image"
                />
                <img 
                    src="https://cdn.myportfolio.com/9eba5643-bfa0-410a-bf8e-e98703657db5/db6a378a-bfac-4b5c-bcc7-5b5c8e4619ec_rw_1200.jpg?h=522f2323bd60211df8dd9e2c0044591f" 
                    alt="QUÁI! lêDUY - VNDNA - Frame 5"
                    loading="lazy"
                    class="gallery-image"
                />
            </div>
        </div>
    </main>
</Layout>

<style>
    .main-content {
        min-height: 100vh;
        padding: 2rem 0;
    }

    .container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 2rem;
    }

    .project-header {
        margin-bottom: 3rem;
        text-align: center;
    }

    .project-title {
        font-family: "DM Mono", monospace;
        font-size: 2.5rem;
        font-weight: 600;
        color: #333;
        margin-bottom: 2rem;
        line-height: 1.2;
    }

    .project-meta {
        display: flex;
        flex-wrap: wrap;
        gap: 2rem;
        justify-content: center;
        font-family: "DM Mono", monospace;
    }

    .meta-item {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 0.25rem;
    }

    .meta-label {
        font-size: 0.85rem;
        color: #666;
        text-transform: uppercase;
        letter-spacing: 0.05em;
    }

    .meta-value {
        font-size: 0.95rem;
        color: #333;
        font-weight: 500;
    }

    .project-gallery {
        display: grid;
        gap: 2rem;
        grid-template-columns: 1fr;
        max-width: 900px;
        margin: 0 auto;
    }

    .gallery-image {
        width: 100%;
        height: auto;
        border-radius: 8px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    .gallery-image:hover {
        transform: translateY(-4px);
        box-shadow: 0 8px 30px rgba(0, 0, 0, 0.15);
    }

    .video-section {
        margin-bottom: 3rem;
        max-width: 900px;
        margin-left: auto;
        margin-right: auto;
    }

    .video-wrapper {
        position: relative;
        width: 100%;
        height: 0;
        padding-bottom: 56.25%; /* 16:9 aspect ratio */
        overflow: hidden;
        border-radius: 8px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
    }

    .video-embed {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        border: none;
    }

    .video-description {
        margin-top: 1rem;
        font-family: "DM Mono", monospace;
        font-size: 0.95rem;
        color: #666;
        text-align: center;
        line-height: 1.5;
    }

    @media (max-width: 768px) {
        .container {
            padding: 0 1rem;
        }

        .project-title {
            font-size: 2rem;
        }

        .project-meta {
            gap: 1rem;
        }

        .meta-item {
            flex-direction: row;
            gap: 0.5rem;
        }

        .project-gallery {
            gap: 1.5rem;
        }
    }

    @media (max-width: 540px) {
        .project-title {
            font-size: 1.75rem;
        }

        .project-meta {
            flex-direction: column;
            align-items: center;
            gap: 0.75rem;
        }
    }
</style>