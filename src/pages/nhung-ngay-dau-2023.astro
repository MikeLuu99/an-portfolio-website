---
import Layout from "../layouts/Layout.astro";
import Navigation from "../components/Navigation.astro";
---

<Layout title="những ngày đầu (2023) - An Nguyen's Portfolio">
    <Navigation />
    <main class="main-content">
        <div class="container">
            <div class="project-header">
                <h1 class="project-title">những ngày đầu (2023)</h1>
                <div class="project-meta">
                    <div class="meta-item">
                        <span class="meta-label">Artist:</span>
                        <span class="meta-value">An Nguyen (Anzz)</span>
                    </div>
                    <div class="meta-item">
                        <span class="meta-label">Type:</span>
                        <span class="meta-value">Music Project</span>
                    </div>
                    <div class="meta-item">
                        <span class="meta-label">Year:</span>
                        <span class="meta-value">2023</span>
                    </div>
                </div>
            </div>

            <!-- Spotify Album Embed -->
            <div class="spotify-section">
                <h3 class="section-title">Listen on Spotify</h3>
                <div class="spotify-wrapper">
                    <iframe
                        style="border-radius:12px"
                        src="https://open.spotify.com/embed/album/0zeUiog6SiDOiR862OV0Xf?utm_source=generator&theme=0"
                        width="100%"
                        height="152"
                        frameBorder="0"
                        allowfullscreen=""
                        allow="autoplay; clipboard-write; encrypted-media; fullscreen; picture-in-picture"
                        loading="lazy"
                    >
                    </iframe>
                </div>
            </div>
        </div>
    </main>
</Layout>

<style>
    .main-content {
        min-height: 100vh;
        padding: 2rem 0;
    }

    .container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 2rem;
    }

    .project-header {
        margin-bottom: 3rem;
        text-align: center;
    }

    .project-title {
        font-family: "DM Mono", monospace;
        font-size: 2.5rem;
        font-weight: 600;
        color: #333;
        margin-bottom: 2rem;
        line-height: 1.2;
    }

    .project-meta {
        display: flex;
        flex-wrap: wrap;
        gap: 2rem;
        justify-content: center;
        font-family: "DM Mono", monospace;
        margin-bottom: 2rem;
    }

    .meta-item {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 0.25rem;
    }

    .meta-label {
        font-size: 0.85rem;
        color: #666;
        text-transform: uppercase;
        letter-spacing: 0.05em;
    }

    .meta-value {
        font-size: 0.95rem;
        color: #333;
        font-weight: 500;
    }

    .project-content {
        max-width: 900px;
        margin: 0 auto;
    }

    .content-description {
        margin-bottom: 2rem;
        padding: 2rem;
        background: rgba(146, 180, 182, 0.1);
        border-radius: 12px;
        text-align: center;
    }

    .content-description p {
        font-family: "DM Mono", monospace;
        font-size: 1.1rem;
        color: #666;
        line-height: 1.6;
    }

    .related-section {
        background: white;
        padding: 2rem;
        border-radius: 12px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.05);
    }

    .related-title {
        font-family: "DM Mono", monospace;
        font-size: 1.3rem;
        color: #333;
        margin-bottom: 1rem;
        text-align: center;
    }

    .related-item {
        margin-bottom: 1rem;
    }

    .related-link {
        display: block;
        padding: 1rem;
        border-radius: 8px;
        background: rgba(146, 180, 182, 0.05);
        text-decoration: none;
        color: inherit;
        transition:
            background-color 0.2s ease,
            transform 0.2s ease;
    }

    .related-link:hover {
        background: rgba(146, 180, 182, 0.1);
        transform: translateY(-2px);
    }

    .related-name {
        display: block;
        font-family: "DM Mono", monospace;
        font-size: 1.1rem;
        font-weight: 600;
        color: #333;
        margin-bottom: 0.5rem;
    }

    .related-description {
        display: block;
        font-family: "DM Mono", monospace;
        font-size: 0.9rem;
        color: #666;
    }

    .spotify-section {
        margin-bottom: 3rem;
        max-width: 900px;
        margin-left: auto;
        margin-right: auto;
        padding: 2rem;
        background: rgba(146, 180, 182, 0.1);
        border-radius: 12px;
        text-align: center;
    }

    .section-title {
        font-family: "DM Mono", monospace;
        font-size: 1.5rem;
        color: #333;
        margin-bottom: 1.5rem;
    }

    .spotify-wrapper {
        max-width: 800px;
        margin: 0 auto 1rem auto;
        border-radius: 12px;
        overflow: hidden;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
    }

    .spotify-description {
        font-family: "DM Mono", monospace;
        font-size: 0.95rem;
        color: #666;
        line-height: 1.6;
    }

    @media (max-width: 768px) {
        .container {
            padding: 0 1rem;
        }

        .project-title {
            font-size: 2rem;
        }

        .project-meta {
            gap: 1rem;
        }

        .spotify-section {
            padding: 1.5rem;
        }

        .spotify-wrapper {
            margin: 0 -1rem 1rem -1rem;
        }

        .meta-item {
            flex-direction: row;
            gap: 0.5rem;
        }

        .content-description {
            padding: 1.5rem;
        }

        .content-description p {
            font-size: 1rem;
        }

        .related-section {
            padding: 1.5rem;
        }

        .related-title {
            font-size: 1.2rem;
        }
    }

    @media (max-width: 540px) {
        .project-title {
            font-size: 1.75rem;
        }

        .project-meta {
            flex-direction: column;
            align-items: center;
            gap: 0.75rem;
        }
    }
</style>
