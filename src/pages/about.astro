---
import Layout from "../layouts/Layout.astro";
import Navigation from "../components/Navigation.astro";
---

<Layout title="About - Film Portfolio">
    <Navigation />
    <main class="main-content">
        <div class="container">
            <div class="about-content">
                <div class="profile-section">
                    <div class="profile-image">
                        <img
                            src="/profile.jpg"
                            alt="Profile"
                            class="profile-photo"
                        />
                    </div>
                    <div class="profile-info">
                        <h1 class="name">An Nguyen</h1>
                        <p class="title">Movie Director and Music Artist</p>
                        <p class="location">USC Class of 2027</p>
                    </div>
                </div>

                <div class="bio-section">
                    <h2>About Me</h2>
                    <p>
                        Nguyen Nang Hai An (b. 2005) is a Vietnamese film director, hip-hop artist, and Film & TV Production student at University of Southern California, School of Cinematic Arts. Currently based in Saigon (Ho Chi Minh City) and Los Angeles.
                    </p>
                </div>

                <div class="skills-section">
                    <h2>Skills & Expertise</h2>
                    <div class="skills-grid">
                        <div class="skill-category">
                            <h3>Visual</h3>
                            <ul>
                                <li>Cinematography</li>
                                <li>Color Grading</li>
                                <li>Video Editing</li>
                                <li>Motion Graphics</li>
                                <li>Visual Effects</li>
                            </ul>
                        </div>
                        <div class="skill-category">
                            <h3>Audio</h3>
                            <ul>
                                <li>Sound Design</li>
                                <li>Music Composition</li>
                                <li>Audio Mixing</li>
                                <li>Dialogue Editing</li>
                                <li>Foley Recording</li>
                            </ul>
                        </div>
                        <div class="skill-category">
                            <h3>Tools</h3>
                            <ul>
                                <li>DaVinci Resolve</li>
                                <li>Adobe Creative Suite</li>
                                <li>Pro Tools</li>
                                <li>Logic Pro X</li>
                                <li>Cinema 4D</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>
</Layout>

<style>
    .main-content {
        min-height: 100vh;
        padding: 2rem 0;
    }

    .container {
        max-width: 800px;
        margin: 0 auto;
        padding: 0 2rem;
    }

    .about-content {
        background: white;
        border-radius: 12px;
        padding: 3rem;
        box-shadow: 0 4px 30px rgba(0, 0, 0, 0.08);
    }

    .profile-section {
        display: flex;
        align-items: center;
        gap: 2rem;
        margin-bottom: 3rem;
        padding-bottom: 2rem;
        border-bottom: 1px solid #92B4B6;
    }

    .profile-image {
        flex-shrink: 0;
    }

    .profile-photo {
        width: 120px;
        height: 120px;
        border-radius: 50%;
        object-fit: cover;
        border: 3px solid #92b4b6;
    }

    .profile-info h1 {
        font-family: "DM Mono", monospace;
        font-size: 2rem;
        font-weight: 600;
        margin-bottom: 0.5rem;
        color: #333;
    }

    .title {
        font-size: 1.2rem;
        color: #666;
        margin-bottom: 0.5rem;
    }

    .location {
        color: #999;
        font-size: 1rem;
    }

    .bio-section,
    .skills-section,
    .contact-section {
        margin-bottom: 3rem;
    }

    .bio-section h2,
    .skills-section h2,
    .contact-section h2 {
        font-family: "DM Mono", monospace;
        font-size: 1.5rem;
        font-weight: 600;
        margin-bottom: 1.5rem;
        color: #333;
    }

    .bio-section p {
        font-family: "Instrument Sans", sans-serif;
        margin-bottom: 1.5rem;
        line-height: 1.7;
        color: #666;
    }

    .skills-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 2rem;
    }

    .skill-category h3 {
        font-family: "DM Mono", monospace;
        font-size: 1.2rem;
        font-weight: 600;
        margin-bottom: 1rem;
        color: #333;
    }

    .skill-category ul {
        list-style: none;
    }

    .skill-category li {
        padding: 0.5rem 0;
        color: #666;
        border-bottom: 1px solid #92B4B6;
    }

    .skill-category li:last-child {
        border-bottom: none;
    }

    .contact-info {
        display: flex;
        flex-direction: column;
        gap: 1rem;
        margin-top: 1.5rem;
    }

    .contact-link {
        display: flex;
        align-items: center;
        gap: 0.8rem;
        color: #666;
        transition: color 0.2s ease;
        font-weight: 500;
    }

    .contact-link:hover {
        color: #92b4b6;
    }

    .contact-section p {
        font-family: "Instrument Sans", sans-serif;
        color: #666;
        line-height: 1.7;
        margin-bottom: 1rem;
    }

    @media (max-width: 768px) {
        .container {
            padding: 0 1rem;
        }

        .about-content {
            padding: 2rem;
        }

        .profile-section {
            flex-direction: column;
            text-align: center;
            gap: 1.5rem;
        }

        .profile-photo {
            width: 100px;
            height: 100px;
        }

        .profile-info h1 {
            font-size: 1.7rem;
        }

        .skills-grid {
            grid-template-columns: 1fr;
            gap: 1.5rem;
        }
    }
</style>
